{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["chrome", "jest"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
